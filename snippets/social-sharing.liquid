<!-- /snippets/social-sharing.liquid -->
<div class="Nav Nav--socialShare">
{% comment %} <a href="https://www.facebook.com/sharer/sharer.php?u=https://www.nenaandco.com/collections/available-now/products/36242">Share</a> {% endcomment %}

    <a target="_blank" rel="noopener" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      <svg viewBox='0 0 20 20' class='icon' width='1em' height='1em'>
        <use href='#facebook'></use>
      </svg>
      <span aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
      <span class="hide">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>

    <a target="_blank" rel="noopener" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
      <svg viewBox='0 0 20 20' class='icon' width='1em' height='1em'>
        <use href='#pinterest'></use>
      </svg>
      <span aria-hidden="true">{{ 'general.social.share_on_pinterest' | t }}</span>
      <span class="hide">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>

    <a target="_blank" rel="noopener" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
      <svg viewBox='0 0 20 20' class='icon' width='1em' height='1em'>
        <use href='#twitter'></use>
      </svg>
      <span aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
      <span class="hide">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>

</div>
